<style>
	.status_hot_buttons {display: inline !important;}
	.status_hot_buttons form { display: inline !important;}
</style>
<div class="status_hot_buttons">
	<% if @cycle.status == "Planned" %>
		<%= form_for(@cycle) do |f| %>
			<%= f.hidden_field :status, value: "Open" %>
			<%= f.submit "Open", :class => "btn btn-success btn-xs" %>
		<% end %>
	<% elsif @cycle.status == "Open" %>
		<%= form_for(@cycle) do |f| %> <%= f.hidden_field :status, value: "Closed" %> <%= f.submit "Close", :class => "btn btn-danger btn-xs" %><% end %>
		<%= form_for(@cycle) do |f| %> <%= f.hidden_field :status, value: "Paused" %> <%= f.submit "Pause", :class => "btn btn-warning btn-xs" %><% end %>
	
	<% elsif @cycle.status == "Paused" %>
		<%= form_for(@cycle) do |f| %>
			<%= f.hidden_field :status, value: "Re-Opened" %>
			<%= f.submit "Re-Open", :class => "btn btn-success btn-xs" %>
		<% end %>
	
	<% elsif @cycle.status == "Re-Opened" %>
		<%= form_for(@cycle) do |f| %>
			<%= f.hidden_field :status, value: "Closed" %>
			<%= f.submit "Close", :class => "btn btn-danger btn-xs" %>
		<% end %>
	<% else %>
		<%= form_for(@cycle) do |f| %>
			<%= f.hidden_field :status, value: "Re-Opened" %>
			<%= f.submit "Re-Open", :class => "btn btn-success btn-xs" %>
		<% end %>
	<% end %>
</div>