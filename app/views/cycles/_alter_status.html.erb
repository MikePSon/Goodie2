<% if @cycle.status == "Planned" %>
	<%= form_for(@cycle) do |f| %>
		<%= f.hidden_field :status, value: "Open" %>
		<%= f.submit "Open", :class => "btn btn-xs btn-success" %>
	<% end %>
<% elsif @cycle.status == "Open" %>
	<%= form_for(@cycle) do |f| %>
		<%= f.hidden_field :status, value: "Closed" %>
		<%= f.submit "Close", :class => "btn btn-xs btn-danger" %>
	<% end %> | 
	<%= form_for(@cycle) do |f| %>
		<%= f.hidden_field :status, value: "Paused" %>
		<%= f.submit "Pause", :class => "btn btn-xs btn-warning" %>
	<% end %>

<% elsif @cycle.status == "Paused" %>
	<%= form_for(@cycle) do |f| %>
		<%= f.hidden_field :status, value: "Re-Opened" %>
		<%= f.submit "Re-Open", :class => "btn btn-xs btn-success" %>
	<% end %>

<% elsif @cycle.status == "Re-Opened" %>
	<%= form_for(@cycle) do |f| %>
		<%= f.hidden_field :status, value: "Closed" %>
		<%= f.submit "Close", :class => "btn btn-xs btn-danger" %>
	<% end %>
<% else %>
<% end %>