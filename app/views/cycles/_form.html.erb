<% @myOrgID = Organization.where(:_id => current_user.organization_id).first.id %>

<%= form_for(@cycle) do |f| %>
  <% if @cycle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cycle.errors.count, "error") %> prohibited this cycle from being saved:</h2>

      <ul>
      <% @cycle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="field">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :class => "form-control" %>
        </div>
      </div>
      <div class="field">
        <div class="form-group">
          <%= f.label :status %>
          <%= f.select(:status, cycle_statuses, {}, { :class => 'form-control' }) %>
        </div>
      </div>
      <div class="field">
        <div class="form-group">
          <%= f.label :project %>
          <% @projectOptions = options_from_collection_for_select(Project.where(:organization_id => @myOrgID), :id, :name) %>
          <%= f.select(:project_id, @projectOptions, {}, { :class => 'form-control' }) %>
        </div>
      </div>

      <div class="field">
        <div class="form-group mb">
           <%= f.label :open %>
          <div id="datetimepicker1" class="input-group date">
             <%= f.datetime_select :open, :class => "form-control m-b" %>
             <span class="input-group-addon">
                <span class="fa fa-calendar"></span>
             </span>
          </div>
        </div>
      </div>

    

      <div style="display:none">
        <div class="field">
          <%= f.label :organization %><br>
          <%= f.text_field :organization_id, :class => "form-control", :value => @myOrgID %>
        </div>
      </div>
    </div>
  </div>

  <div class="actions" style="margin-top:15px;">
    <%= f.submit 'Create Cycle', :class => 'btn btn-success' %>
  </div>
<% end %>

<script>
// Forms Demo
// ----------------------------------- 


(function(window, document, $, undefined){

  $(function(){

    // DATETIMEPICKER
    // ----------------------------------- 

    if($.fn.datetimepicker) {

      $('#datetimepicker1').datetimepicker({
        icons: {
            time: 'fa fa-clock-o',
            date: 'fa fa-calendar',
            up: 'fa fa-chevron-up',
            down: 'fa fa-chevron-down',
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-crosshairs',
            clear: 'fa fa-trash'
          }
      });
    }

  });

})(window, document, window.jQuery);
</script>