<div class="field">
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, :class => "form-control" %>
	</div>
</div>
<div class="field">
	<div class="form-group">
		<%= f.label :status %>
		<%= f.select(:status, cycle_statuses, {}, { :class => 'form-control' }) %>
	</div>
</div>
<div class="field">
	<div class="form-group">
		<%= f.label :project %>
		<% @projectOptions = options_from_collection_for_select(Project.where(:organization_id => @myOrgID), :id, :name) %>
		<%= f.select(:project_id, @projectOptions, {}, { :class => 'form-control' }) %>
	</div>
</div>
<div class="field">
	<div class="form-group mb">
		<%= f.label :open %>
		<div id="openTimePicker" class="input-group date">
			<%= f.text_field :open, as: :default, value: f.object.open.try(:strftime,"%e %b %Y %l:%M %p"), :class => "form-control m-b", :placeholder => "DD Mon YYYY HH:MM AM/PM" %>
			<span class="input-group-addon">
				<span class="fa fa-calendar"></span>
			</span>
		</div>
	</div>
</div>

<div class="field">
	<div class="form-group mb">
		<%= f.label :close %>
		<div id="closeTimePicker" class="input-group date">
			<%= f.text_field :close, as: :default, value: f.object.close.try(:strftime,"%e %b %Y %l:%M %p"), :class => "form-control m-b", :placeholder => "DD Mon YYYY HH:MM AM/PM" %>
			<span class="input-group-addon">
				<span class="fa fa-calendar"></span>
			</span>
		</div>
	</div>
</div>