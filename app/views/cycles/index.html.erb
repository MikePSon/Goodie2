<p id="notice"><%= notice %></p>

<h1>Listing Cycles</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Open</th>
      <th>Close</th>
      <th>Budget</th>
      <th>Project</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cycles.each do |cycle| %>
      <tr>
        <td><%= cycle.name %></td>
        <td><%= cycle.open.strftime("%e %b %Y %l:%M %p").to_s %></td>
        <td><%= cycle.close.strftime("%e %b %Y %l:%M %p").to_s %></td>
        <td><%= cycle.budget %></td>
        <td><%= cycle.project.name %></td>
        <td><%= cycle.organization.name %></td>
        <td><%= link_to 'Show', cycle %></td>
        <td><%= link_to 'Edit', edit_cycle_path(cycle) %></td>
        <td><%= link_to 'Destroy', cycle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

