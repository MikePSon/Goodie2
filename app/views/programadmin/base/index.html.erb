})

function display_demo_chart() {
  var selected = $("#demo_chart_select option:selected").text();

  if(selected == "Gender"){
    $('.gender_pie').show();
    $('.race_pie').hide();
    $('.age_pie').hide();
  }
  else if(selected == "Race") {
    $('.race_pie').show();
    $('.gender_pie').hide();
    $('.age_pie').hide();
  }
  else if(selected == "Age") {
    $('.age_pie').show();
    $('.race_pie').hide();
    $('.gender_pie').hide();
  }
};

