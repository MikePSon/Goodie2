<div class="content-heading">
   <% if @primaryAction %>
   <div class="pull-right">
      <%= link_to @primaryActionText.html_safe, @primaryActionPath, :class => "btn btn-primary btn-sm" %>
      <% if @secondaryAction %>
      	<%= link_to @secondaryActionText.html_safe, @secondaryActionPath, :class => "btn btn-default btn-sm" %>
      <% end %>
   </div>
   <% end %>
   <!-- END Language list    -->
   <span data-localize="pagetitle.<%= @thisPage %>"><%= @title %></span>
   <small data-localize="subtitle.<%= @thisPage %>"><%= @subtitle %></small>
</div>