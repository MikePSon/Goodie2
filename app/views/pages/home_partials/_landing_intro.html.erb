<style>
    .modal-backdrop{z-index:-1;}
    @media (min-width: 768px){.modal-dialog{margin:90px auto;}}
</style>

<div id="top" class="landing-intro" role="main">
    <!-- Start .container -->
    <div class="container">
        <!-- Start intro-slogan -->
        <div class="intro-slogan text-center animated fadeInDown">
            <h1>More for your community. <strong>Fast!</strong>
            </h1>
            <p>
                An Easy <strong>Giving App</strong> Designed for Simplicity
                <br><span class="hidden-xs">Deep Insights. User friendly.<strong>Fast start up.</strong></span>
            </p>
            <div class="registration-btn-container">
                <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-xl btn-landing" %>
            </div>
        </div>
        <!-- End intro-slogan -->
    </div>
    <!-- End .container -->
    <!-- Start .description-bar -->
    <div class="description-bar">
        <!-- Start container -->
        <div class="container text-center hidden-xs">
            <p>Low cost solution for community foundations, corporations, government groups, academic instiutions to accept, award and track grant giving.</p>
        </div>
        <div class="container text-center visible-xs">
            <p>Low cost solution to accept, review, and track your giving efforts.</p>
        </div>
        <!-- End container -->
    </div>
    <!-- End description-bar -->
    <!-- Scroll to next section -->
    <a href="#build-with-love" class="scrollTo">
        <p class="sroll-down">
            <%= image_tag "landing_img/landing/scroll_down" %>
        </p>
    </a>
</div>