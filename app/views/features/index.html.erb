<p id="notice"><%= notice %></p>

<h1>Listing Features</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Free tier</th>
      <th>Paid tier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= feature.free_tier %></td>
        <td><%= feature.paid_tier %></td>
        <td><%= link_to 'Show', feature %></td>
        <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
        <td><%= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feature', new_feature_path %>
