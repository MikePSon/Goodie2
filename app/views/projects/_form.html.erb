<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :organization %><br>
    <%= f.text_field :organization_id %>
  </div>


  <div class="" id="cycle" style="margin-top:15px;">
    <fieldset>
      <h4>
        Cycle
      </h4>
      <%= f.fields_for :cycle do |cycle| %>
        <%= render 'cycle_fields', f: cycle %>
      <% end %>
            
      <div class="links">
        <%= link_to_add_association 'Add Cycle', f, :cycle, :class => "btn btn-default" %>
      </div>
    </fieldset>
  </div>

  <div class="actions" style="margin-top:15px;">
    <%= f.submit 'Create Project', :class => 'btn btn-success' %>
  </div>
<% end %>
