<div class="nested-fields">
  <div class="container-fluid">
    <div class="row-fluid form-group">
      <div class="col-xs-12">
        <div class="field">
          <% f.label :name %>
          <%= f.text_field :name, class: "form-control", :placeholder => "Cycle Name" %>
        </div>
        <div class="field">
          <% f.label :status %>
          <%= f.select(:status, {class: 'form-control'}, id: "select2-1") do %>
            <%= options_for_select(cycle_statuses) %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row-fluid form-group">
      <div class="col-xs-12">
        <div class="field" style="display: none;">
          <%= f.label :organization %><br>
          <%= f.text_field :organization_id, :class => "form-control", :value => Organization.where(:_id => current_user.organization_id).first.id %>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="col-xs-12">
        <%= link_to_remove_association '<i class="fa fa-trash-o"></i>'.html_safe, f %>
      </div>
    </div>

    <hr>

  </div>
</div>