<div class="nested-fields">
  <div class="form-group">
    <div class="field">
      <% f.label :name %>
      <%= f.text_field :name, class: "form-control", :placeholder => "Cycle Name" %>
    </div>
    <div class="field" style="margin-top:15px;">
      <% f.label :status %>
      <%= f.select(:status, cycle_statuses, {}, { :class => 'form-control' }) %>
    </div>
  </div>

  <div class="row-fluid form-group hidden">
    <div class="col-xs-12">
      <div class="field">
        <%= f.label :organization %><br>
        <%= f.text_field :organization_id, :class => "form-control", :value => Organization.where(:_id => current_user.organization_id).first.id %>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="col-xs-12">
      <%= link_to_remove_association '<i class="fa fa-trash-o"></i>'.html_safe, f %>
    </div>
  </div>

</div>