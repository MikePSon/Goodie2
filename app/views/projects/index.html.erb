<%= render 'layouts/partials/page_header' %>


<div class="row">
  <% @projects.each do |project| %>
    <% all_cycles = Cycle.where(:project_id => project.id) %>
    <% open_cycles = all_cycles.where(:status => "Open") %>
    <% next_open = all_cycles.order(open: :desc).first %>
    <% all_requests = Request.where(:project_id => project.id) %>



  <div class="col-lg-4 col-md-6">
    <div class="panel b">
      <div class="panel-heading">
        <div class="pull-right">
          <div class="label label-info"><%= open_cycles.count %> Open</div>
        </div>
        <h4 class="m0"><%= project.name %></h4>
          <small class="text-muted">Sed amet lectus id.</small>
      </div>
      <div class="panel-body">
        <div class="table-grid table-grid-align-middle">
          <div class="col">
            <div class="visible-xs visible-sm text-bold text-muted text-right">22%</div>
              <div data-toggle="tooltip" data-title="Health">
                <div class="progress progress-xs m0">
                  <div style="width:22%" class="progress-bar progress-bar-warning">22%</div>
                </div>
              </div>
          </div>
          <div class="col wd-xxs text-right hidden-xs hidden-sm">
            <div class="text-bold text-muted">22%</div>
          </div>
        </div>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <td><strong>Annual Budget</strong></td>
            <td><%= number_to_currency(project.annual_budget) %></td>
          </tr>
          <tr>
            <td><strong>Total Applications</strong></td>
            <td>
              <%= all_requests.count %>
            </td>
          </tr>
          <tr>
            <td>
              <strong>Given All Time</strong>
            </td>
            <td>
              <a href="" data-toggle="tooltip" data-title="Team leader">
                <img src="<%= image_path('angle/user/03.jpg') %>" alt="project member" class="img-circle thumb24" />
              </a>
            </td>
          </tr>
          <tr>
            <td><strong>Next Cycle Open</strong></td>
            <td>
              <%= next_open.open.strftime("%e %b %Y %l:%M %p").to_s %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="panel-footer text-center">
        <%= link_to 'Show', project, :class => "btn btn-primary btn-sm" %>
        <%= link_to 'Edit', edit_project_path(project), :class => "btn btn-warning btn-sm" %>
        <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
