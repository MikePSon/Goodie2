<p id="notice"><%= notice %></p>

<h1>Listing Mailing Subscribers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Discount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mailing_subscribers.each do |mailing_subscriber| %>
      <tr>
        <td><%= mailing_subscriber.first_name %></td>
        <td><%= mailing_subscriber.last_name %></td>
        <td><%= mailing_subscriber.email %></td>
        <td><%= mailing_subscriber.discount %></td>
        <td><%= link_to 'Show', mailing_subscriber %></td>
        <td><%= link_to 'Edit', edit_mailing_subscriber_path(mailing_subscriber) %></td>
        <td><%= link_to 'Destroy', mailing_subscriber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

