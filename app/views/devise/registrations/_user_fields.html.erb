<%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :method => :put, role: "form" }) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.email_field :email, :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :admin %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.check_box :admin, class: "" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :first_name %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="row">
      <div class="col-sm-6">
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      </div>
    </div>
    <% end %>

    <div class="form-group">
      <%= f.label :password %> <i><small>(leave blank if you don't want to change it)</small></i>
      <div class="row">
        <div class="col-sm-6">
          <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password %> <i><small>(we need your current password to confirm your changes)</small></i>
      <div class="row">
        <div class="col-sm-6">
          <%= f.password_field :current_password, class: "form-control" %>
        </div>
      </div>
    </div>

    <% if params[:action] == "edit" %>
      <div class="form-group">
        <% f.label :organization %>
        
        <% orgOptions = options_from_collection_for_select(Organization.all, :id, :name) %>
        <%= f.select(:organization_id, {class: 'form-control'}) do %>
          <%= options_for_select(orgOptions) %>
        <% end %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>

<% end %>