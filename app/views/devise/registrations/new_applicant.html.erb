<%
  if params[:organization_id]
    @gotParam = "GOT IT"
    @orgID = params[:organization_id]
  end
%>

<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <h1>New Applicant Registration</h1>
    <%= form_for(:user, :as => :user,
      :url => registration_path(:user), 
      :html => { :role => "form", :class => "form-horizontal" }) do |f| %>

      <div class="form-group">
        <%= f.label :first_name, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :first_name, class: "form-control", :placeholder => "First Name" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :last_name, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :last_name, class: "form-control", :placeholder => "Last Name" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :email, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :email, class: "form-control", :placeholder => "Email Address" %>
        </div>
      </div>

      <div style="">
        <div class="form-group">
          <div class="row">
            <label class="col-sm-2 control-label">Type</label>
            <div class="col-sm-10">
              <label class="checkbox-inline">
                <%= f.check_box :applicant, :checked => true %>Applicant
              </label>
            </div>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label :organization_id, :class => "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= f.text_field :organization_id, class: "form-control", :value => @orgID %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row-fluid">
          <div class="col-xs-12">
          </div>
        </div>
        <%= f.label :password, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :confirmation, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <%= f.submit "Let's Go!", class: "btn btn-primary" %>
      
    <% end #End Form %>
  </div>
</div>
