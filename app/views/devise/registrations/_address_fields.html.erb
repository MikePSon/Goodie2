
<div class="nested-fields">
  <div class="container-fluid">
    <div class="row-fluid form-group">
      <div class="col-xs-12">
        <% f.label :address1 %>
        <%= f.text_field :address1, class: "form-control", :placeholder => "Address1" %>
      </div>
    </div>
    <div class="row-fluid form-group">
      <div class="col-xs-12">
        <% f.label :address2 %>
        <%= f.text_field :address2, class: "form-control", :placeholder => "Address2" %>
      </div>
    </div>
    <div class="row-fluid form-group">
      <div class="col-xs-12">
        <% f.label :state %>
        <%= f.select :state, options_for_select(us_states), {required: 'true', class: 'form-control', :selected => params[:id]} %>
      </div>
    </div>
    <div class="row-fluid form-group">
      <div class="col-xs-12">
        <% f.label :zip %>
        <%= f.text_field :zip, class: "form-control", :placeholder => "Zip" %>
      </div>
    </div>
    <div class="row-fluid form-group">
      <div class="col-xs-12">
        <% f.label :phone %>
        <%= f.telephone_field :phone, class: "form-control phone_input", :placeholder => "Telephone" %>
      </div>
    </div>


    <div class="row-fluid form-group">
      <div class="col-xs-12 col-sm-3">

      </div>
    </div>

    <hr>

  </div>
</div>