<%= render 'layouts/partials/messages' %>


<div class="row">
  <div class="col-sm-6 ">
    <h1>Sign in</h1>
    <h5>Please enter your email and password</h5>

    <%= form_for(resource, :as => resource_name,
    :url => session_path(resource_name),
    role: "form") do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :email, :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>



    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      </div>
    </div>
    <% end -%>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Sign in", class: "btn btn-primary", :id => "authenticate" %>
      </div>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
