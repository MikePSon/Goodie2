<div class="panel panel-default">
   <div class="panel-heading">Basic Information</div>
   <div class="panel-body">
   	<dl class="dl-horizontal">
		  <dt>Project</dt>
    	<dd><%= @project.name %></dd>

    	<dt>Cycle</dt>
    	<dd><%= @cycle.name %></dd>
      
      <% if @request.amount_requested %>
        <dt>Amount Requested</dt>
        <dd><%= @request.amount_requested %></dd>
      <% end %>

      <% if @request.title %>
		    <dt>Project Title</dt>
		    <dd><%= @request.title %></dd>
      <% end %>

    <% if @request.other_funding %>
		  <dt><span class="">Uses </span>Other Funding?</dt>
		  <dd><%= @request.other_funding %></dd>
    <% end %>


		<% if @request.other_funding %>
      		<dt>Total Budget</dt>
      		<dd><%= @request.total_budget %></dd>
  		<% end %>
    </dl>
  </div>     
</div>